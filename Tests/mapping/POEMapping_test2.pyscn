def dummyInterpolateTransform(a_H_b, a_H_c, alpha):
    
    a_H_result = [0,0,0, 0,0,0,1];
    
    for i in range(3):
        a_H_result[i] = (1-alpha)*a_H_b[i] + alpha*a_H_c[i]
    
    q = [0,0,0,1];
    for i in range(4):
        q[i] =  (1-alpha)*a_H_b[i+3] + alpha*a_H_c[i+3]
    
    q = normalize(q)
    
    for i in range(4):
        a_H_result[i+3]  = q[i]
    
    return a_H_result
        
    
    
        
        
        



